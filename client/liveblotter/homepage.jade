doctype html

html(lang="en")
    head
        include includes/head
    body

        #fb-root

        script.
            (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=233525283515263&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));

        #title-bar
            #title
                h1.hidden-xs Seattle Live Blotter
                #mode POLICE 911 RESPONSE
            #status.hidden-xs
        #content-container.row
            #map-container.col-xs-12.col-sm-9.col-md-9.col-lg-9
                #map
                #switcher
                    button#crimes.btn.btn-default.btn-lg(type="button" disabled) Police Dept.
                    button#fires.btn.btn-default.btn-lg(type="button") Fire Dept. 
            #feed.col-xs-12.col-sm-3.col-md-3.col-lg-3

          section#credits
            p 
                .fb-share-button(data-href="http://code.danielfang.org/liveblotter/" data-layout="button_count")
                button#disclaimer-button.btn.btn-default.btn-xs(type="button" data-toggle="modal" data-target="#disclaimer-modal")
                    span#disclaimer.glyphicon.glyphicon-info-sign
                    | Disclaimer


            p &copy; 
                a(target="_blank" href="http://www.danielfang.org") Daniel Fang
                | , 2015
            p Made with &#10084; in Seattle
            p Built using the Socrata Open Data API

            .modal.fade#disclaimer-modal(tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true")
                .modal-dialog
                    .modal-content
                        .modal-header
                            button.close(type="button" data-dismiss="modal" aria-label="Close")
                                span(aria-hidden="true") &times;
